@import "normalize.css"

// Colours:
$page_background = #eee
$background = white

// Layout:
$width = 900px
$main_padding = 15px

body
  background: $page_background

  #page_container
    background: $background
    padding: $main_padding
    width: $width
    min-height:500px
    margin: 1em auto


header
  margin: -1*$main_padding
  margin-bottom: 1em

  nav
    margin-bottom: 1em
  nav ul
    margin: 0
    padding: 0
  nav li
    display: block
    float: left
    padding: 1em 0
    width: (($width + 2*$main_padding)/4) - 1
    margin: 0
    color: #777
    font-weight: bold
    text-align: center
    background: -webkit-linear-gradient(#eee, #ddd)
    border: 1px solid #ccc
    border-right-width: 0

    &:last-child
      width: (($width + 2*$main_padding)/4)
      border-right-width: 1px

body > section
  display: none

#import
  display: block


// Helper classes
.hide
  display: none

.clear
  clear: both


// Drag and drop-related elements:
#drop_zone
  display: none
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  overflow: hidden
  z-index:9999

#hover_cover
  display: none
  position: absolute
  top: 0
  left: 0
  width: 100%
  padding: 28% 0     // FIXME: need to fill the whole page w/o scrollbars
  overflow: hidden
  text-align: center
  background: rgba(0,0,0,0.2)
  z-index:1000

  &.file_hover
    display: block
