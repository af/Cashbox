@import "normalize.css"

// Colours:
$page_background = #eee
$background = white

body
  background: $page_background

  #page_container
    background: $background
    padding: 1em
    width: 900px
    min-height:500px
    margin: 1em auto


header
  nav
    margin-bottom: 1em
  nav ul
    margin: 0
    padding: 0
  nav li
    display: inline-block
    padding: 4px 15px 4px 0

body > section
  display: none

#import
  display: block


// Helper classes
.hide
  display: none


// Drag and drop-related elements:
#drop_zone
  display: none
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  overflow: hidden
  z-index:9999

#hover_cover
  display: none
  position: absolute
  top: 0
  left: 0
  width: 100%
  padding: 28% 0     // FIXME: need to fill the whole page w/o scrollbars
  overflow: hidden
  text-align: center
  background: rgba(0,0,0,0.2)
  z-index:1000

  &.file_hover
    display: block
