@import "normalize.css"
@import "mixins"

// Colours:
$page_background = #eee
$background = white

// Layout:
$width = 900px
$main_padding = 20px


body
  background: $page_background

  #page_container
    background: $background
    width: $width
    min-height:500px
    margin: 1em auto
    box-shadow: 0 0 8px rgba(0,0,0,0.08)


header
  background: #bbb
  background-linear-gradient(#ccc, #bbb)

  nav ul
    margin: 0
    padding: 0
  nav li
    display: block
    float: left
    vendor('box-sizing', border-box)
    width: ($width/4)
    margin: 0
    color: #777
    font-weight: bold
    text-align: center
    border: 1px solid #ccc
    border-right-width: 0

    &:last-child
      border-right-width: 1px

    a
      color: #777
      text-decoration: none
      display: inline-block
      width: 100%
      padding: 1em 0
      text-shadow: 1px 1px 0 white
      background: #ddd
      background-linear-gradient(#eee, #ddd)

      &.active
        vendor(box-shadow, 0 0 8px #bbb inset)
        background-linear-gradient(#eee, #ccc)

#main
  position: relative
  padding: $main_padding

  > section > h1
    margin-top: 0

  #clear_data
    position: absolute
    top: $main_padding
    right: $main_padding


table.expenses
  td
    padding: 2px 10px 2px 0
    &.date
      color: #555
    &.amount
      text-align: right
      font-weight: bold
      font-family: monospace
      font-size: 1.2em
      color: #999


// Helper classes
.hide
  display: none

.clear
  clear: both


// Drag and drop-related elements:
#drop_zone
  display: none
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  overflow: hidden
  z-index:9999

#hover_cover
  display: none
  position: absolute
  top: 0
  left: 0
  width: 100%
  padding: 28% 0     // FIXME: need to fill the whole page w/o scrollbars
  overflow: hidden
  text-align: center
  background: rgba(0,0,0,0.2)
  z-index:1000

  &.file_hover
    display: block
